{
  "name": "@dolittle/tooling.common",
  "version": "4.1.0",
  "description": "Common tools for dolittle tooling",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/common.git"
  },
  "bugs": {
    "url": "https://github.com/dolittle-tools/common/issues"
  },
  "files": [
    "dist"
  ],
  "main": "dist/commonjs/index.js",
  "module": "dist/esmodule/index.js",
  "jspm": {
    "registry": "npm",
    "jspmPackage": true,
    "format": "amd",
    "main": "index",
    "directories": {
      "dist": "dist/systemjs"
    },
    "dependencies": {}
  },
  "scripts": {
    "build": "gulp build && find ./dist/* -type 'f' -maxdepth 1| xargs rm -f && for dir in ./dist/*; do mv \"$dir\"/Source/* \"$dir\"/ && rm -rf \"$dir\"/Source; done",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@dolittle/build": "~6.2.1"
  },
  "dependencies": {
    "@dolittle/boilerplates.application": "^1.0.0",
    "@dolittle/boilerplates.artifact-templates": "^1.0.0",
    "@dolittle/boilerplates.bounded-context.csharp": "^1.0.0",
    "@dolittle/boilerplates.bounded-context.veracity.csharp": "^1.0.0",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.12",
    "rc": "^1.2.8",
    "shelljs": "^0.8.2",
    "simple-git": "^1.96.0",
    "winston": "^3.1.0"
  }
}
