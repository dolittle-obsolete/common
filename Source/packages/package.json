{
  "name": "@dolittle/tooling.common.packages",
  "version": "6.2.2",
  "description": "Utilities related to packages for dolittle tooling",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/common.git"
  },
  "bugs": {
    "url": "https://github.com/dolittle-tools/common/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "lib",
    "package.json",
    "**/*.d.ts"
  ],
  "main": "lib/index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "scripts": {
    "ts:clean": "rimraf '**/*.d.ts'",
    "ts:cjs": "../../node_modules/typescript/bin/tsc -p tsconfig.json --declaration false",
    "ts:typedefs": "../../node_modules/typescript/bin/tsc --outDir . --emitDeclarationOnly",
    "ts:all": "yarn ts:cjs && yarn ts:typedefs",
    "test:clean": "rimraf 'lib/**/for_*'",
    "test:build": "yarn ts:cjs",
    "test:run": "mocha --require '@dolittle/typescript.build/mocha.opts' --reporter=spec 'lib/**/for_*/**/*.+(js|ts)'",
    "clean": "rimraf lib && yarn ts:clean",
    "build": "yarn clean && yarn ts:all",
    "test": "yarn test:build && yarn test:run",
    "prepublishOnly": "yarn build && yarn test:run && yarn test:clean"
  },
  "dependencies": {
    "@dolittle/tooling.common.files": "8.*",
    "@dolittle/tooling.common.utilities": "8.*",
    "@types/npm-user-packages": "3.0.0",
    "cross-spawn": "6.0.5",
    "is-online": "8.2.0",
    "latest-version": "5.1.0",
    "npm-keyword": "6.1.0",
    "npm-user-packages": "3.0.0",
    "package-json": "6.4.0",
    "semver": "6.1.1"
  },
  "devDependencies": {
    "@types/semver": "6.0.1"
  }
}
