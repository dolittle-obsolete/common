{
  "name": "@dolittle/tooling.common.plugins",
  "description": "The aggregated package for dolittle tooling",
  "version": "5.1.0-alpha.9",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/common.git"
  },
  "bugs": {
    "url": "https://github.com/dolittle-tools/common/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "lib",
    "package.json",
    "**/*.d.ts"
  ],
  "main": "lib/index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "scripts": {
    "ts:cjs": "tsc -p tsconfig.json --declaration false",
    "ts:typedefs": "tsc --outDir . --emitDeclarationOnly",
    "ts:all": "yarn ts:cjs && yarn ts:typedefs",
    "ts:clean": "rimraf ./*.d.ts **/*.d.ts lib",
    "build": "yarn clean && yarn ts:all",
    "clean": "rimraf dist && yarn ts:clean",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@dolittle/tooling.common.logging": "alpha",
    "@dolittle/tooling.common.files": "alpha",
    "@dolittle/tooling.common.utilities": "alpha",
    "@dolittle/tooling.common.packages": "alpha",
    "@dolittle/tooling.common.commands": "alpha",
    "@dolittle/tooling.common.configurations": "alpha"
  },
  "devDependencies": {}
}
