{
  "name": "@dolittle/tooling.common.boilerplates",
  "version": "6.1.1",
  "description": "The boilerplates system for common dolittle tooling",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/common.git"
  },
  "bugs": {
    "url": "https://github.com/dolittle-tools/common/issues"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "lib",
    "package.json",
    "**/*.d.ts"
  ],
  "main": "lib/index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "scripts": {
    "ts:cjs": "tsc -p tsconfig.json --declaration false",
    "ts:typedefs": "tsc --outDir . --emitDeclarationOnly",
    "ts:all": "yarn ts:cjs && yarn ts:typedefs",
    "ts:clean": "rimraf ./*.d.ts **/*.d.ts lib",
    "build": "yarn clean && yarn ts:all",
    "clean": "rimraf dist && yarn ts:clean",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@dolittle/tooling.common.configurations": "6.*",
    "@dolittle/tooling.common.commands": "6.*",
    "@dolittle/tooling.common.dependencies": "6.*",
    "@dolittle/tooling.common.files": "6.*",
    "@dolittle/tooling.common.logging": "6.*",
    "@dolittle/tooling.common.utilities": "6.*",
    "@types/handlebars": "4.1.0",
    "cross-spawn": "6.0.5",
    "handlebars": "4.1.2",
    "lodash": "4.17.11",
    "npm-keyword": "6.1.0",
    "npm-user-packages": "3.0.0",
    "semver": "6.1.1"
  },
  "devDependencies": {
    "@types/lodash": "4.14.125",
    "@types/npm-user-packages": "3.0.0",
    "@types/semver": "6.0.1"
  }
}
