{
  "name": "@dolittle/tooling.common",
  "version": "8.0.0",
  "description": "The aggregated common tooling system for dolittle",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/common.git"
  },
  "bugs": {
    "url": "https://github.com/dolittle-tools/common/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "Distribution",
    "package.json",
    "**/*.ts"
  ],
  "main": "Distribution/index.js",
  "types": "Distribution/index.d.ts",
  "scripts": {
    "tasks": "gulp --tasks --gulpfile ../../node_modules/@dolittle/typescript.build.node/Gulpfile.js",
